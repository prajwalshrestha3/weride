<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weride.werideapp.CreatedRide">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/rideName"
            android:text="Name of ride"
            android:textColorHighlight="@color/cast_expanded_controller_ad_label_background_color"
            android:textColor="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rideNameValue"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="25dp" />

        <TextView
            android:text="Start Time/Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rideDateTime"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rideDateTimeValue"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="25dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rideStartLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Start location"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rideEndLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="End location"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rideStartLocValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rideEndLocValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:text="Pace:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ridePace"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="5dp" />

        <RatingBar
            android:id="@+id/ridePaceBarValue"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:indeterminateDrawable="@drawable/button_bg"
            android:isIndicator="true"

            android:numStars="5"
            android:stepSize="1" />

        <TextView
            android:text="Age:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rideAge"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rideAgeValue"
            android:textSize="18sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="25dp" />

        <Button
            android:text="Back to home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backToHomeButton"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:onClick="goBackToHome"/>
    </LinearLayout>

</RelativeLayout>
